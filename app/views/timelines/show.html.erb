<container class="row">

  <aside class="col-12 col-md-3">
    <h1><%= @timeline.user.email %></h1>
    <div class="counter">
      <%= link_to friends_user_path(@timeline.user) do %>
      <span>Friends: </span>
      <span><%= @timeline.friends.count %></span>
      <% end %>
    </div>
  </aside>

  <main class="col-12 col-md-9">
    <%= form_for @timeline.posts.build do |f| %>
      <%= f.text_area :content, placeholder: "Enter post's  content" %>
      <%= f.submit "New post" %>
    <% end %>
    <%= render @timeline.posts.reload %>
  </main>

</container>