
<div class="comment post-comment" data-id="<%= comment.id %>">
  <header>
    <span>Posted <%= time_ago_in_words(comment.created_at) %> ago</span>
    <span>by <%= link_to comment.author_email, user_path(comment.author) %></span>
  </header>
  <main>
    <%= comment.content %>
  </main>
  <aside>
    <div class="meta-settings">
      <span><%= link_to "View", comment_path(comment) %></span>
      <span><%= link_to "Edit", edit_comment_path(comment) %></span>
      <span><%= link_to "Delete", comment_path(comment), method: :delete, data: { confirm: "You sure?" } %></span>
    </div>
  </aside>
</div>